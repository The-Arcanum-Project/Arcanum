<ResourceDictionary xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Back colors and their brushes -->
    <Color x:Key = "InlineBackColor"> #333333 </Color>
    <Color x:Key = "DefaultBackColor"> #222222 </Color>
    <Color x:Key = "DarkBackColor"> #1c1c1c </Color>
    <Color x:Key = "LightBackColor"> #393939 </Color>
    <Color x:Key = "SelectedBackColor"> #575757 </Color>
    <Color x:Key = "DarkerSelectedBackColor"> #484848 </Color>
    <Color x:Key = "RowAlternatingColor"> #757373 </Color>
    <Color x:Key = "BlueSelectionBackColor"> #2e436e </Color>
    <Color x:Key = "AggressiveRedBackColor"> #e81123 </Color>
    <Color x:Key = "GreenColor"> #528d57 </Color>

    <SolidColorBrush x:Key = "GreenColorBrush"
                     Color = "{StaticResource GreenColor}" />
    <SolidColorBrush x:Key = "InlineBackColorBrush"
                     Color = "{StaticResource InlineBackColor}" />
    <SolidColorBrush x:Key = "DefaultBackColorBrush"
                     Color = "{StaticResource DefaultBackColor}" />
    <SolidColorBrush x:Key = "DarkBackColorBrush"
                     Color = "{StaticResource DarkBackColor}" />
    <SolidColorBrush x:Key = "LightBackColorBrush"
                     Color = "{StaticResource LightBackColor}" />
    <SolidColorBrush x:Key = "SelectedBackColorBrush"
                     Color = "{StaticResource SelectedBackColor}" />
    <SolidColorBrush x:Key = "BlueSelectionBackColorBrush"
                     Color = "{StaticResource BlueSelectionBackColor}" />
    <SolidColorBrush x:Key = "DarkerSelectedBackColorBrush"
                     Color = "{StaticResource DarkerSelectedBackColor}" />
    <SolidColorBrush x:Key = "RowAlternatingColorColorBrush"
                     Color = "{StaticResource DarkerSelectedBackColor}" />
    <SolidColorBrush x:Key = "AggressiveRedBackColorBrush"
                     Color = "{StaticResource AggressiveRedBackColor}" />
    <SolidColorBrush x:Key = "AccentBackColorBrush"
                     Color = "#FF0e3338" />

    <LinearGradientBrush x:Key = "AccentGradientBrush"
                         StartPoint = "-0.2,-0.2"
                         EndPoint = "0.6,0.6">
        <!-- Step 1 -->
        <GradientStop Color="#FF0C2E31" Offset="0.0" />
        <GradientStop Color="#FF0C2E31" Offset="0.1" />
        <!-- Step 2 -->
        <GradientStop Color="#FF102D2F" Offset="0.1" />
        <GradientStop Color="#FF102D2F" Offset="0.2" />
        <!-- Step 3 -->
        <GradientStop Color="#FF132B2D" Offset="0.2" />
        <GradientStop Color="#FF132B2D" Offset="0.3" />
        <!-- Step 4 -->
        <GradientStop Color="#FF162A2C" Offset="0.3" />
        <GradientStop Color="#FF162A2C" Offset="0.4" />
        <!-- Step 5 -->
        <GradientStop Color="#FF18282A" Offset="0.4" />
        <GradientStop Color="#FF18282A" Offset="0.5" />
        <!-- Step 6 -->
        <GradientStop Color="#FF1A2728" Offset="0.5" />
        <GradientStop Color="#FF1A2728" Offset="0.6" />
        <!-- Step 7 -->
        <GradientStop Color="#FF1C2526" Offset="0.6" />
        <GradientStop Color="#FF1C2526" Offset="0.7" />
        <!-- Step 8 -->
        <GradientStop Color="#FF1E2425" Offset="0.7" />
        <GradientStop Color="#FF1E2425" Offset="0.8" />
        <!-- Step 9 -->
        <GradientStop Color="#FF202223" Offset="0.8" />
        <GradientStop Color="#FF202223" Offset="0.9" />
        <!-- Step 10 -->
        <GradientStop Color="#FF212121" Offset="0.9" />
        <GradientStop Color="#FF212121" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key = "OrangeAccentGradientBrush"
                         StartPoint = "0,0"
                         EndPoint = "1,2">
        <GradientStop Color = "DarkOrange"
                      Offset = "-0.50">
        </GradientStop>
        <GradientStop Color = "BlueViolet"
                      Offset = "1.0">
        </GradientStop>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key = "InvertedAccentGradientBrush"
                         StartPoint = "-0.2,-0.2"
                         EndPoint = "1,1">
        <GradientStop Color = "{StaticResource DefaultBackColor}"
                      Offset = "0.6" />
        <GradientStop Color = "#FF0e3338"
                      Offset = "0.85" />
    </LinearGradientBrush>


    <!-- Foreground colors and their brushes -->
    <Color x:Key = "GreenForeColor"> #50964d </Color>
    <Color x:Key = "GreyedOutForeColor"> #676e70 </Color>
    <Color x:Key = "DisabledForeColor"> #595959 </Color>
    <Color x:Key = "DefaultForeColor"> #dfdfdf </Color>

    <SolidColorBrush x:Key = "GreenForeColorBrush"
                     Color = "{StaticResource GreenForeColor}" />
    <SolidColorBrush x:Key = "GreyedOutForeColorBrush"
                     Color = "{StaticResource GreyedOutForeColor}" />
    <SolidColorBrush x:Key = "DisabledForeColorBrush"
                     Color = "{StaticResource DisabledForeColor}" />
    <SolidColorBrush x:Key = "DefaultForeColorBrush"
                     Color = "{StaticResource DefaultForeColor}" />

    <!-- Border colors and their brushes -->
    <Color x:Key = "DefaultBorderColor"> #454545 </Color>
    <Color x:Key = "SelectedControlBorderColor"> #3574f0 </Color>

    <SolidColorBrush x:Key = "DefaultBorderColorBrush"
                     Color = "{StaticResource DefaultBorderColor}" />
    <SolidColorBrush x:Key = "SelectedControlBorderColorBrush"
                     Color = "{StaticResource SelectedControlBorderColor}" />


</ResourceDictionary>