<styleClasses:BaseWindow x:Class = "Arcanum.UI.Components.Windows.DebugWindows.Debug_Panel"
                         xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
                         xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:styleClasses = "clr-namespace:Arcanum.UI.Components.StyleClasses"
                         mc:Ignorable = "d"
                         Title = "Debug_Panel"
                         Height = "450"
                         Width = "800"
                         WindowStartupLocation = "CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "1*" />
            <ColumnDefinition Width = "4*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row = "0"
                    Grid.Column = "0"
                    Margin = "4"
                    Orientation = "Vertical">
            <styleClasses:BaseButton Content = "Browse Provinces"
                                     Margin = "2"
                                     Padding = "4"
                                     Click = "BrowseProvincesButton_Click" />

            <styleClasses:BaseButton Content = "FindNullMarkets"
                                     Margin = "2"
                                     Padding = "4"
                                     Click = "FindNullMarketsButton_Click" />

            <styleClasses:BaseButton Content = "Null location in Market"
                                     Margin = "2"
                                     Padding = "4"
                                     Click = "FindNullLocationInMarketButton_Click" />

            <styleClasses:BaseButton Content = "Saving Window"
                                     Margin = "2"
                                     Padding = "4"
                                     Click = "OpenSavingWindowButton_Click" />

            <styleClasses:BaseButton Content = "Saving Exporter Window"
                                     Margin = "2"
                                     Padding = "4"
                                     Click = "OpenSavingWindowExporterButton_Click" />
        </StackPanel>

        <ContentPresenter Grid.Column = "1"
                          x:Name = "DebugView">
        </ContentPresenter>
    </Grid>
</styleClasses:BaseWindow>