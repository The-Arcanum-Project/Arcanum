<styleClasses:BaseWindow x:Class = "Arcanum.UI.Components.Windows.DebugWindows.NUIObjectView"
                         xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
                         xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:styleClasses = "clr-namespace:Arcanum.UI.Components.StyleClasses"
                         mc:Ignorable = "d"
                         Title = "NUIObjectView"
                         Height = "600"
                         Width = "1000"
                         WindowStartupLocation = "CenterScreen">
    <Grid Margin = "2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "2*" />
            <ColumnDefinition Width = "2*" />
            <ColumnDefinition Width = "4*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height = "30" />
            <RowDefinition Height = "*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Column = "0"
                   Grid.Row = "0"
                   FontWeight = "Bold"
                   FontSize = "16"
                   HorizontalAlignment = "Center"
                   VerticalAlignment = "Center"
                   Text = "NUI Object Types">
        </TextBlock>

        <TextBlock Grid.Column = "1"
                   Grid.Row = "0"
                   FontWeight = "Bold"
                   FontSize = "16"
                   HorizontalAlignment = "Center"
                   VerticalAlignment = "Center"
                   Text = "NUI Objects">
        </TextBlock>

        <TextBlock Grid.Column = "2"
                   Grid.Row = "0"
                   FontWeight = "Bold"
                   FontSize = "16"
                   HorizontalAlignment = "Center"
                   VerticalAlignment = "Center"
                   Text = "{Binding SelectedObjectName, RelativeSource={RelativeSource AncestorType=styleClasses:BaseWindow}}">
        </TextBlock>

        <ListView Grid.Column = "0"
                  Grid.Row = "1"
                  Margin = "4"
                  ItemsSource = "{Binding NUIObjectTypes, RelativeSource={RelativeSource AncestorType=styleClasses:BaseWindow}}"
                  SelectionChanged = "Selector_OnSelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text = "{Binding Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ListView Grid.Column = "1"
                  Grid.Row = "1"
                  Margin = "4"
                  ItemsSource = "{Binding NUIObjects, RelativeSource={RelativeSource AncestorType=styleClasses:BaseWindow}}"
                  SelectionChanged = "ObjectSelector_OnSelectionChanged"
                  x:Name = "ObjectListView">
        </ListView>

        <Border Grid.Column = "2"
                Grid.Row = "1"
                Margin = "4"
                BorderBrush = "{StaticResource DefaultBackColorBrush}"
                CornerRadius="3"
                BorderThickness = "2">
            <ScrollViewer>
                <ContentPresenter x:Name = "ViewPresenter"/>
            </ScrollViewer>
        </Border>
    </Grid>
</styleClasses:BaseWindow>