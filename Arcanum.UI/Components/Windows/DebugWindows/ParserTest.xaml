<styleClasses:BaseWindow x:Class = "Arcanum.UI.Components.Windows.DebugWindows.ParserTest"
                         xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
                         xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:local = "clr-namespace:Arcanum.UI.Components.Windows.DebugWindows"
                         xmlns:styleClasses = "clr-namespace:Arcanum.UI.Components.StyleClasses"
                         mc:Ignorable = "d"
                         Title = "ParserTest"
                         Height = "500"
                         Width = "1200"
                         WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "3*" />
            <ColumnDefinition Width = "7*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height = "40" />
            <RowDefinition Height = "*" />
        </Grid.RowDefinitions>

        <Grid Grid.Column = "0"
              Grid.ColumnSpan = "2"
              Grid.Row = "0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width = "*" />
                <ColumnDefinition Width = "80" />
                <ColumnDefinition Width = "80" />
            </Grid.ColumnDefinitions>

            <ComboBox
                ItemsSource = "{Binding FilesToTestValues, RelativeSource={RelativeSource AncestorType=styleClasses:BaseWindow}}"
                SelectedItem = "{Binding SelectedFile, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=styleClasses:BaseWindow}}"
                Margin="3"
                VerticalAlignment="Center"/>
            
            <styleClasses:BaseButton Content = "Run Lexer"
                    Grid.Column = "1"
                    Margin = "3"
                    VerticalAlignment = "Center"
                    Click="RunLexer_ButtonClick"/>
            
            <styleClasses:BaseButton Content = "Run Parser"
                    Grid.Column = "2"
                    Margin = "3"
                    VerticalAlignment = "Center"
                    Click="RunParser_ButtonClick"/>
            
        </Grid>

        <styleClasses:CorneredTextBox x:Name = "InputTextBox"
                                      Grid.Column = "0"
                                      Grid.Row = "1"
                                      Margin = "10"
                                      AcceptsReturn = "True"
                                      VerticalScrollBarVisibility = "Auto"
                                      TextWrapping = "Wrap"
                                      FontFamily = "Consolas"
                                      FontSize = "11"
                                      IsReadOnly = "True"
                                      Text = "{Binding InputText, RelativeSource={RelativeSource AncestorType=styleClasses:BaseWindow}}" />

        <styleClasses:CorneredTextBox x:Name = "OutputTextBox"
                                      Grid.Column = "1"
                                      Grid.Row = "1"
                                      Margin = "10"
                                      AcceptsReturn = "True"
                                      VerticalScrollBarVisibility = "Auto"
                                      TextWrapping = "Wrap"
                                      FontFamily = "Consolas"
                                      FontSize = "11"
                                      IsReadOnly = "True"
                                      Text = "{Binding OutputText, RelativeSource={RelativeSource AncestorType=styleClasses:BaseWindow}}" />
    </Grid>
</styleClasses:BaseWindow>