<styleClasses:BaseWindow x:Class = "Arcanum.UI.Components.Windows.DebugWindows.AgsWindow"
                         xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
                         xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:styleClasses = "clr-namespace:Arcanum.UI.Components.StyleClasses"
                         mc:Ignorable = "d"
                         Title = "AgsWindow"
                         Height = "450"
                         Width = "800"
                         WindowStartupLocation = "CenterScreen">
    <Grid Margin = "2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height = "30" />
            <RowDefinition Height = "*" />
            <RowDefinition Height = "30" />
        </Grid.RowDefinitions>

        <Grid Grid.Column = "0"
              Grid.ColumnSpan = "3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width = "*" />
                <ColumnDefinition Width = "*" />
                <ColumnDefinition Width = "*" />
                <ColumnDefinition Width = "*" />
            </Grid.ColumnDefinitions>


            <styleClasses:CorneredTextBox Grid.Row = "0"
                                          Grid.Column = "0"
                                          x:Name = "CommentChar"
                                          Margin = "2">
                #
            </styleClasses:CorneredTextBox>

            <ComboBox Grid.Column = "1"
                      x:Name = "SeperatorChar"
                      ItemsSource = "{Binding SeparatorChars, RelativeSource={RelativeSource AncestorType=Window}}"
                      Margin = "2">
            </ComboBox>

            <styleClasses:CorneredTextBox Grid.Row = "0"
                                          Grid.Column = "2"
                                          x:Name = "OpeningChar"
                                          Margin = "2">
            </styleClasses:CorneredTextBox>

            <styleClasses:CorneredTextBox Grid.Row = "0"
                                          Grid.Column = "3"
                                          x:Name = "ClosingChar"
                                          Margin = "2">
            </styleClasses:CorneredTextBox>

        </Grid>

        <ListView Grid.Column = "0"
                  Grid.Row = "1"
                  x:Name = "AgsTypesView"
                  ItemsSource = "{Binding AgsTypes, RelativeSource={RelativeSource AncestorType=Window}}"
                  SelectionChanged = "AgsItemsView_SelectionChanged"
                  Margin = "2">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text = "{Binding Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ListView Grid.Column = "1"
                  Grid.Row = "1"
                  x:Name = "AgsItemsView"
                  ItemsSource = "{Binding AgsItems, RelativeSource={RelativeSource AncestorType=Window}}"
                  SelectionChanged = "ObjectSelector_OnSelectionChanged"
                  Margin = "2">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text = "{Binding ClassMetadata}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <styleClasses:CorneredTextBox Grid.Column = "2"
                                      Grid.Row = "1"
                                      x:Name = "AgsSavingText"
                                      TextWrapping = "NoWrap"
                                      VerticalScrollBarVisibility = "Auto"
                                      HorizontalScrollBarVisibility = "Auto"
                                      IsReadOnly = "True"
                                      FontFamily = "Consolas"
                                      FontSize = "12"
                                      Margin = "2" />

        <styleClasses:BaseButton Grid.Column = "2"
                                 Grid.Row = "2"
                                 Width = "100"
                                 Click = "ExportButton_Click"
                                 Margin = "2">
            Export
        </styleClasses:BaseButton>
    </Grid>
</styleClasses:BaseWindow>