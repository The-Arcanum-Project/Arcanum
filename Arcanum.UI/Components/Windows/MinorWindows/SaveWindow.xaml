<styleClasses:BaseWindow x:Class="Arcanum.UI.Components.Windows.MinorWindows.SaveWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:styleClasses="clr-namespace:Arcanum.UI.Components.StyleClasses"
                 Title="Save Configuration"
                 Height="450"
                 Width="300"
                 Background="{StaticResource DefaultBackColorBrush}"
                 BorderThickness="0"
                 FooterHeight="10">
    <Grid Background="{StaticResource InlineBackColorBrush}">
        <Border Background="{StaticResource DefaultBackColorBrush}">
            <StackPanel Orientation = "Vertical"
                        x:Name = "FilesStackPanel">
            </StackPanel>
        </Border>
    </Grid>
</styleClasses:BaseWindow>