<styleClasses:BaseWindow x:Class = "Arcanum.UI.Components.Windows.MinorWindows.ParsingViewer"
                         xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
                         xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:local = "clr-namespace:Arcanum.UI.Components.Windows.MinorWindows"
                         xmlns:styleClasses = "clr-namespace:Arcanum.UI.Components.StyleClasses"
                         xmlns:parsingMaster = "clr-namespace:Arcanum.Core.CoreSystems.Parsing.ParsingMaster;assembly=Arcanum.Core"
                         mc:Ignorable = "d"
                         Title = "Parsing Explorer"
                         Height = "450"
                         Width = "800"
                         Background="{StaticResource LightBackColorBrush}"
                         WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "2*" />
            <ColumnDefinition Width = "1*" />
            <ColumnDefinition Width = "1*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height = "30" />
            <RowDefinition Height = "*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Column = "0"
                   Grid.Row = "0"
                   Text = "Parsing Steps"
                   VerticalAlignment = "Center"
                   HorizontalAlignment = "Left"
                   Margin = "5"
                   FontSize = "14"
                   FontWeight = "Bold" />

        <ListView x:Name = "ParsingListView"
                  Grid.Column = "0"
                  Grid.Row = "1"
                  Margin = "2"
                  ItemsSource = "{x:Static parsingMaster:DescriptorDefinitions.FileDescriptors}"
                  SelectionChanged = "ParsingListView_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Margin="2">
                        <TextBlock Text = "{Binding FilePath}" />
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <TextBlock Grid.Column = "1"
                   Grid.Row = "0"
                   Text = "Parsed Files"
                   VerticalAlignment = "Center"
                   HorizontalAlignment = "Left"
                   Margin = "5"
                   FontSize = "14"
                   FontWeight = "Bold" />

        <ListView Grid.Column = "1"
                  Grid.Row = "1"
                  Margin = "2"
                  ItemsSource = "{Binding CurrentDescriptor.Files, RelativeSource={RelativeSource AncestorType=local:ParsingViewer}, FallbackValue='No Step Selected'}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Margin="2">
                        <TextBlock Text = "{Binding Path.Filename}" />
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <TextBlock Grid.Column = "2"
                   Grid.Row = "0"
                   Text = "Parsed / Created Objects"
                   VerticalAlignment = "Center"
                   HorizontalAlignment = "Left"
                   Margin = "5"
                   FontSize = "14"
                   FontWeight = "Bold" />
        
        <ListView Grid.Column = "2"
                  Grid.Row = "1"
                  Margin = "2"
                  ItemsSource = "{Binding CurrentDescriptor.LoadingService.ParsedObjects, RelativeSource={RelativeSource AncestorType=local:ParsingViewer}, FallbackValue='No Step Selected'}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Margin="2">
                        <TextBlock Text = "{Binding Name}" />
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView> 

    </Grid>
</styleClasses:BaseWindow>