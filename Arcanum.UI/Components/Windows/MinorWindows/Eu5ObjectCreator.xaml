<styleClasses:BaseWindow x:Class = "Arcanum.UI.Components.Windows.MinorWindows.Eu5ObjectCreator"
                         xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
                         xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:styleClasses = "clr-namespace:Arcanum.UI.Components.StyleClasses"
                         mc:Ignorable = "d"
                         Title = "Eu5ObjectCreator"
                         Height = "450"
                         Width = "800"
                         WindowStyle = "None"
                         WindowStartupLocation = "CenterScreen">

    <Grid VerticalAlignment = "Stretch"
          HorizontalAlignment = "Stretch">

        <Grid.RowDefinitions>
            <RowDefinition Height = "Auto" />
            <RowDefinition Height = "*" />
            <RowDefinition Height = "Auto" />
        </Grid.RowDefinitions>

        <TextBlock TextAlignment = "Center"
                   VerticalAlignment = "Center"
                   FontSize = "18"
                   FontWeight = "Bold"
                   Text = "{Binding ObjectTitle, RelativeSource= {RelativeSource AncestorType = Window}}" />

        <Grid Height = "30"
              Grid.Row = "2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width = "*" />
                <ColumnDefinition Width = "*" />
            </Grid.ColumnDefinitions>

            <styleClasses:BaseButton Content = "Create"
                                     Margin = "2"
                                     HorizontalAlignment = "Stretch"
                                     Click = "CreateButtonBase_OnClick" />
            <styleClasses:BaseButton Grid.Column = "1"
                                     Content = "Cancel"
                                     Margin = "2"
                                     HorizontalAlignment = "Stretch"
                                     Click = "CancelButtonBase_OnClick" />
        </Grid>
        <ScrollViewer Grid.Row = "1">
            <ContentPresenter x:Name = "ContentPresenter"
                              Content = "{Binding ObjectUI, RelativeSource= {RelativeSource AncestorType = Window}}" />
        </ScrollViewer>
    </Grid>
</styleClasses:BaseWindow>