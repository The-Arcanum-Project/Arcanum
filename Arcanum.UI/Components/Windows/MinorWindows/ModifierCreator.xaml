<styleClasses:BaseWindow x:Class = "Arcanum.UI.Components.Windows.MinorWindows.ModifierCreator"
                         xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
                         xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:styleClasses = "clr-namespace:Arcanum.UI.Components.StyleClasses"
                         xmlns:autoCompleteBox = "clr-namespace:Arcanum.UI.Components.UserControls.BaseControls.AutoCompleteBox"
                         mc:Ignorable = "d"
                         Title = "ModifierCreator"
                         Height = "450"
                         Width = "800">

    <!-- Page Design -->
    <!--     [TextBlock Localisation]   |     |   [TextBlock Modifier Value]     -->
    <!--                        S    P    A    C    E    R                       -->
    <!--     [Dropdown]                 |  =  |   [Dropdown with default values] -->
    <!--     [Cancel Button]            |     |   [Create Button]                -->

    <Grid Margin = "4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "20" />
            <ColumnDefinition Width = "*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height = "30" />
            <RowDefinition Height = "30" />
            <RowDefinition Height = "30" />
        </Grid.RowDefinitions>

        <!-- Modifier Localisation -->
        <TextBlock Grid.Column = "0"
                   Grid.Row = "0"
                   Text = "{Binding ModifierLocalisation, RelativeSource={RelativeSource AncestorType=styleClasses:BaseWindow}}"
                   VerticalAlignment = "Center"
                   HorizontalAlignment = "Right"
                   Margin = "0,0,10,0" />

        <TextBlock Grid.Column = "1"
                   Grid.Row = "0"
                   Text = "="
                   VerticalAlignment = "Center"
                   HorizontalAlignment = "Center" />

        <!-- Modifier Value -->
        <TextBlock Grid.Column = "2"
                   Grid.Row = "0"
                   Text = "{Binding ModifierValue, RelativeSource={RelativeSource AncestorType=styleClasses:BaseWindow}}"
                   VerticalAlignment = "Center"
                   HorizontalAlignment = "Left"
                   Margin = "10,0,0,0" />

        <!-- Spacer -->
        <TextBlock Grid.Column = "1"
                   Grid.Row = "0"
                   Text = ""
                   VerticalAlignment = "Center"
                   HorizontalAlignment = "Center" />

        <!-- Modifier Name Dropdown -->
        <autoCompleteBox:AutoCompleteComboBox Grid.Column = "0"
                                              Grid.Row = "1"
                                              x:Name = "ModifierNameBox"
                                              VerticalAlignment = "Center"
                                              HorizontalAlignment = "Stretch"
                                              MinWidth = "200"
                                              Margin = "0,0,10,0"
                                              Text = "{Binding ModifierName, RelativeSource={RelativeSource AncestorType=styleClasses:BaseWindow}, UpdateSourceTrigger=PropertyChanged}"
                                              SelectionChanged = "ModifierNameBox_SelectionChanged">
        </autoCompleteBox:AutoCompleteComboBox>


        <TextBlock Grid.Column = "1"
                   Grid.Row = "1"
                   Text = "="
                   VerticalAlignment = "Center"
                   HorizontalAlignment = "Center" />

        <!-- Modifier Value Dropdown -->
        <autoCompleteBox:AutoCompleteComboBox Grid.Column = "2"
                                              Grid.Row = "1"
                                              x:Name = "ModifierValueBox"
                                              VerticalAlignment = "Center"
                                              HorizontalAlignment = "Stretch"
                                              MinWidth = "200"
                                              Margin = "10,0,0,0"
                                              FullItemsSource = "{Binding ModifierDefaultValues, RelativeSource={RelativeSource AncestorType=styleClasses:BaseWindow}}"
                                              Text = "{Binding ModifierValue, RelativeSource={RelativeSource AncestorType=styleClasses:BaseWindow}, UpdateSourceTrigger=PropertyChanged}">
        </autoCompleteBox:AutoCompleteComboBox>

        <DockPanel Grid.Column = "0"
                   Grid.ColumnSpan = "3"
                   Grid.Row = "2"
                   LastChildFill = "False">

            <!-- Create Button -->
            <styleClasses:BaseButton x:Name = "CreateButton"
                                     Content = "Create"
                                     VerticalAlignment = "Center"
                                     DockPanel.Dock = "Right"
                                     MinWidth = "100"
                                     Margin = "0,0,0,0"
                                     Click = "CreateButton_Click" />

            <!-- Cancel Button -->
            <styleClasses:BaseButton x:Name = "CancelButton"
                                     Content = "Cancel"
                                     VerticalAlignment = "Center"
                                     DockPanel.Dock = "Right"
                                     MinWidth = "100"
                                     Margin = "0,0,10,0"
                                     Click = "CancelButton_Click" />
        </DockPanel>
    </Grid>
</styleClasses:BaseWindow>