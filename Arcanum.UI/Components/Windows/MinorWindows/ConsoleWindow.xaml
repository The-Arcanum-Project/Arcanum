<styleClasses:BaseWindow x:Class = "Arcanum.UI.Components.Windows.MinorWindows.ConsoleWindow"
                 xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:styleClasses = "clr-namespace:Arcanum.UI.Components.StyleClasses"
                 mc:Ignorable = "d"
                 Title = "Console"
                 Height = "450"
                 Width = "800"
                 Background = "{StaticResource LightBackColorBrush}">

    <Grid Margin = "3">
        <Grid.RowDefinitions>
            <RowDefinition Height = "1*" />
            <RowDefinition Height = "30" />
        </Grid.RowDefinitions>

        <styleClasses:CorneredTextBox Grid.Row = "0"
                 x:Name = "ConsoleOutputTextBox"
                 HorizontalScrollBarVisibility = "Disabled"
                 AcceptsReturn = "False"
                 IsReadOnly = "True"
                 BorderThickness = "0"
                 Style = "{StaticResource BaseTextBoxStyle}"
                 Margin = "0, 0, 0, 4"
                 HighlightOnFocus="False"
                 FontFamily="{StaticResource DefaultMonospacedFont}">
                 <!-- CornerRadius = "5" -->

        </styleClasses:CorneredTextBox>

        <styleClasses:CorneredTextBox Grid.Row = "1"
                                      x:Name = "ConsoleInputTextBox"
                                      HorizontalScrollBarVisibility = "Disabled"
                                      VerticalScrollBarVisibility = "Disabled"
                                      TextWrapping="NoWrap"
                                      AcceptsReturn = "False"
                                      IsReadOnly = "False"
                                      BorderThickness = "0"
                                      Style = "{StaticResource BaseTextBoxStyle}"
                                      Margin = "0, 0, 0, 4"
                                      HighlightOnFocus="False"
                                      VerticalContentAlignment="Center"
                                      KeyDown="ConsoleInputTextBox_KeyDown"
                                      TextChanged="ConsoleInputTextBox_TextChanged"
                                      FontFamily="{StaticResource DefaultMonospacedFont}">
                                      <!-- CornerRadius = "5" -->

        </styleClasses:CorneredTextBox>

    </Grid>
</styleClasses:BaseWindow>