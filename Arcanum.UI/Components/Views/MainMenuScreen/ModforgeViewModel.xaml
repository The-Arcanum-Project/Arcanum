<UserControl x:Class = "Arcanum.UI.Components.Views.MainMenuScreen.ModforgeViewModel"
             xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable = "d"
             Background = "Transparent"
             d:DesignHeight = "450"
             d:DesignWidth = "700">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source = "/Components/Styles/Specific/PresentationCard.xaml" />
                <ResourceDictionary>

                    <Style x:Key = "SocialCardBorderStyle"
                           TargetType = "Border"
                           BasedOn = "{StaticResource PresentationCard}">
                        <Setter Property = "Width"
                                Value = "300" />
                        <Setter Property = "Height"
                                Value = "150" />
                        <Setter Property = "Background"
                                Value = "BlueViolet" />
                        <Setter Property = "Margin"
                                Value = "0" />
                    </Style>

                    <!-- TextBlock Styles -->
                    <Style x:Key = "TitleText"
                           TargetType = "TextBlock">
                        <Setter Property = "Foreground"
                                Value = "White" />
                        <Setter Property = "FontSize"
                                Value = "28" />
                        <Setter Property = "HorizontalAlignment"
                                Value = "Left" />
                    </Style>

                    <Style x:Key = "SectionHeaderText"
                           TargetType = "TextBlock">
                        <Setter Property = "Foreground"
                                Value = "White" />
                        <Setter Property = "FontSize"
                                Value = "20" />
                        <Setter Property = "Margin"
                                Value = "0,0,0,10" />
                        <Setter Property = "HorizontalAlignment"
                                Value = "Left" />
                    </Style>

                    <Style x:Key = "SocialHeaderText"
                           TargetType = "TextBlock">
                        <Setter Property = "FontSize"
                                Value = "20" />
                        <Setter Property = "TextAlignment"
                                Value = "Center" />
                        <Setter Property = "Foreground"
                                Value = "White" />
                        <Setter Property = "VerticalAlignment"
                                Value = "Center" />
                        <Setter Property = "Width"
                                Value = "75" />
                        <Setter Property = "Margin"
                                Value = "2,12,5,0" />
                    </Style>

                    <Style x:Key = "SocialBodyText"
                           TargetType = "TextBlock">
                        <Setter Property = "FontSize"
                                Value = "22" />
                        <Setter Property = "TextAlignment"
                                Value = "Center" />
                        <Setter Property = "Foreground"
                                Value = "LightGray" />
                        <Setter Property = "HorizontalAlignment"
                                Value = "Center" />
                        <Setter Property = "VerticalAlignment"
                                Value = "Center" />
                        <Setter Property = "Margin"
                                Value = "5,20,5,5" />
                    </Style>

                    <!-- Image Style -->
                    <Style x:Key = "SocialIconStyle"
                           TargetType = "Image">
                        <Setter Property = "Width"
                                Value = "60" />
                        <Setter Property = "Height"
                                Value = "60" />
                        <Setter Property = "Margin"
                                Value = "5,10,0,0" />
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin = "0">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "1*" />
            <ColumnDefinition Width = "1*" />
        </Grid.ColumnDefinitions>


        <StackPanel Grid.Column = "0">

            <TextBlock Text = "Discover"
                       Style = "{StaticResource TitleText}"
                       Margin = "0,20,0,10"
                       HorizontalAlignment = "Center"
                       FontSize = "30" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width = "1*" />
                    <ColumnDefinition Width = "Auto" />
                    <ColumnDefinition Width = "1*" />
                </Grid.ColumnDefinitions>

                <!-- Latest Release Card -->
                <Border Grid.Column = "1"
                        Width = "320"
                        Height = "320"
                        Style = "{StaticResource PresentationCard}"
                        Margin = "0, 30, 0, 0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint = "0,0"
                                             EndPoint = "1,2">
                            <GradientStop Color = "SandyBrown"
                                          Offset = "0.0" />
                            <GradientStop Color = "Purple"
                                          Offset = "1.0" />
                        </LinearGradientBrush>
                    </Border.Background>

                    <StackPanel>
                        <TextBlock Text = "Latest Release"
                                   Style = "{StaticResource TitleText}"
                                   HorizontalAlignment = "Center"
                                   Margin = "10,40,10,20"
                                   FontSize = "38" />
                        <TextBlock x:Name = "LatestReleaseNameTextBox"
                                   Text = "Fetching data..."
                                   Foreground = "{StaticResource AccentBackColorBrush}"
                                   TextAlignment = "Center"
                                   FontSize = "25"
                                   Margin = "20,20,20,0" />
                        <TextBlock x:Name = "LatestReleaseVersionTextBox"
                                   Text = "Version 1.1.0.0-beta"
                                   Foreground = "LightGray"
                                   TextAlignment = "Center"
                                   FontSize = "16"
                                   Margin = "20,0,20,20" />
                        <TextBlock x:Name = "LatestReleaseUpdateTextBox"
                                   Text = "Get it now!"
                                   Foreground = "White"
                                   TextWrapping = "WrapWithOverflow"
                                   FontSize = "26"
                                   HorizontalAlignment = "Center"
                                   Margin = "20,20,20,20" />
                    </StackPanel>
                </Border>
            </Grid>

        </StackPanel>

        <StackPanel Grid.Column = "1"
                    Margin = "20,20,0,0"
                    HorizontalAlignment = "Stretch">
            <TextBlock Text = "Socials"
                       Style = "{StaticResource SectionHeaderText}"
                       HorizontalAlignment = "Center"
                       FontSize = "30" />

            <Grid HorizontalAlignment = "Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width = "1*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height = "1*" />
                    <RowDefinition Height = "1*" />
                </Grid.RowDefinitions>
                <!-- Discord -->
                <Border Grid.Column = "0"
                        Grid.Row = "0"
                        Style = "{StaticResource SocialCardBorderStyle}"
                        Margin = "0, 30, 0, 20">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width = "80" />
                                <ColumnDefinition Width = "*" />
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column = "0"
                                   Source = "../../../../Assets/Images/ProvinceFileCreator1024x1024.png"
                                   Style = "{StaticResource SocialIconStyle}" />
                            <TextBlock Grid.Column = "0"
                                       Grid.ColumnSpan = "2"
                                       Style = "{StaticResource SocialHeaderText}"
                                       PreviewMouseUp = "DiscordTextBlock_PreviewMouseUp"
                                       HorizontalAlignment = "Center">
                                <Bold> Discord </Bold>
                            </TextBlock>
                        </Grid>
                        <TextBlock Text = "Join our Server for Updates!"
                                   Style = "{StaticResource SocialBodyText}" />
                    </StackPanel>
                </Border>

                <!-- GitHub -->
                <Border Grid.Column = "0"
                        Grid.Row = "1"
                        Style = "{StaticResource SocialCardBorderStyle}">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width = "80" />
                                <ColumnDefinition Width = "*" />
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column = "0"
                                   Source = "../../../../Assets/Images/ProvinceFileCreator1024x1024.png"
                                   Style = "{StaticResource SocialIconStyle}" />
                            <TextBlock Grid.Column = "0"
                                       Grid.ColumnSpan = "2"
                                       Style = "{StaticResource SocialHeaderText}"
                                       PreviewMouseUp = "DiscordTextBlock_PreviewMouseUp"
                                       HorizontalAlignment = "Center">
                                <Bold> GitHub </Bold>
                            </TextBlock>
                        </Grid>
                        <TextBlock Text = "Explore the Wiki,&#x0a; Report Issues"
                                   Style = "{StaticResource SocialBodyText}"
                                   Margin="0, 5, 0, 0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </Grid>

</UserControl>