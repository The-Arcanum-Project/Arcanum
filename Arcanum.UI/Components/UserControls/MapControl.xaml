<UserControl x:Class="Arcanum.UI.Components.UserControls.MapControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Arcanum.UI.Components.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300">
    <Border
            x:Name="HwndHostContainer"
            Background="Black"
            BorderBrush="Gray"
            BorderThickness="1"
            Margin="20"
            MouseRightButtonDown="HwndHostContainer_OnMouseRightButtonDown">
        <!-- D3D11HwndHost will be added here from code-behind -->
        <Border.ContextMenu>
            <ContextMenu>
                <MenuItem Header="DirectX Overlay Menu" />
                <Separator />
                <MenuItem Header="Option 1" />
                <MenuItem Header="Option 2" />
                <MenuItem Header="Exit" />
            </ContextMenu>
        </Border.ContextMenu>
    </Border>
</UserControl>
