<UserControl x:Class = "Arcanum.UI.Components.UserControls.BaseControls.JominiColorView"
             xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
             xmlns:styleClasses = "clr-namespace:Arcanum.UI.Components.StyleClasses"
             xmlns:converters = "clr-namespace:Arcanum.UI.Components.Converters"
             mc:Ignorable = "d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source = "/Arcanum_UI;component/Assets/ArcanumShared/DefaultPalette.xaml" />
                <ResourceDictionary Source = "/Arcanum_UI;component/Assets/ArcanumShared/DefaultFonts.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:JominiColorToBrushConverter x:Key = "JominiColorToBrushConverter" />
        </ResourceDictionary>
    </UserControl.Resources>


    <Border BorderThickness = "1"
            BorderBrush = "{StaticResource DefaultBorderColorBrush}"
            CornerRadius = "3">

        <DockPanel LastChildFill = "True">
            <Border CornerRadius = "3"
                    x:Name = "ColorBorder"
                    Width = "16"
                    Height = "16"
                    VerticalAlignment = "Center"
                    HorizontalAlignment = "Center"
                    DockPanel.Dock = "Left"
                    Margin = "1,0,0,0"
                    Background = "{Binding Color, ElementName=self, Converter={StaticResource JominiColorToBrushConverter}}" />

            <styleClasses:BaseButton DockPanel.Dock = "Right"
                                     VerticalAlignment = "Center"
                                     Click = "ButtonBase_OnClick"
                                     BorderThickness = "0"
                                     x:Name = "ColorButton"
                                     Margin = "2,0,1,0">
                <Image Source = "/Arcanum_UI;component/Assets/Icons/16x16/Pipette16x16.png"
                       Width = "16"
                       Height = "16"
                       Stretch = "UniformToFill" />
            </styleClasses:BaseButton>

            <TextBlock x:Name = "ColorTextBlock"
                       VerticalAlignment = "Center"
                       Margin = "4,0,0,0"
                       Text = "{Binding Color, ElementName=self, Mode=OneWay}" />
        </DockPanel>
    </Border>
</UserControl>