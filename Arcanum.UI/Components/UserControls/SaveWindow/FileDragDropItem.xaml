<UserControl x:Class="Arcanum.UI.Components.UserControls.SaveWindow.FileDragDropItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Arcanum.UI.Components.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="200"
             d:DesignWidth="200"
             Padding="0,5,0,0"
             >
    <UserControl.Style>
        <Style TargetType="UserControl">
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Style>
    <Border AllowDrop="True"
            BorderBrush="{StaticResource DefaultBorderColorBrush}"
            Background="{StaticResource InlineBackColorBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Margin="5,0,5,5"
            Padding="5"
            MinWidth="240"
            Drop="DropTargetBorder_Drop"
            DragOver="DropTargetBorder_DragOver"
            DragEnter="DropTargetBorder_DragEnter"
    >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Text="{Binding FileName, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       FontSize="16"
                       Foreground="{StaticResource DefaultForeColorBrush}"
                       FontWeight="Bold"
                       Margin="0,0,0,5"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"/>
            <ListBox Grid.Row="1"
                     x:Name="ListBox"
                     ItemsSource="{Binding Items, RelativeSource={RelativeSource AncestorType=UserControl}}"
                     BorderThickness="0"
                     Margin="0"
                     Padding="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     Background="Transparent"
                     PreviewMouseLeftButtonDown="ItemListBox_PreviewMouseLeftButtonDown">
                <ListBox.Style>
                    <Style TargetType="ListBox" BasedOn="{StaticResource {x:Type ListBox}}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.Style>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Focusable"
                                Value="False" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <ContentPresenter />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border 
                                BorderBrush="{StaticResource DefaultBorderColorBrush}"
                                BorderThickness="2"
                                CornerRadius="5"
                                Padding="8"
                                Margin="0,0, 0, 4">
                            <TextBlock Foreground="{StaticResource DefaultForeColorBrush}"
                                       Text="{Binding Name}" />
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Border>
</UserControl>