<ResourceDictionary xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:search = "clr-namespace:Arcanum.API.UtilServices.Search;assembly=Arcanum.API">

    <DataTemplate DataType = "{x:Type search:ISearchable}"
                  x:Key = "SearchResultDataTemplate">
        <Grid Margin = "5,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width = "21" />
                <ColumnDefinition Width = "*" />
            </Grid.ColumnDefinitions>

            <Image Grid.Column = "0"
                   Source = "{Binding VisualRepresentation.IconPath, TargetNullValue={x:Null}, FallbackValue={x:Null}}"
                   Width = "16"
                   Height = "16"
                   VerticalAlignment = "Center"
                   Margin = "0,0,5,0"
                   RenderOptions.BitmapScalingMode = "Fant" />


            <TextBlock Grid.Column = "1"
                       VerticalAlignment = "Center"
                       TextTrimming = "CharacterEllipsis">
                <TextBlock.Inlines>
                    <Run Text = "{Binding VisualRepresentation.MainText}"
                         Foreground = "{StaticResource GreenForeColorBrush}"
                         FontSize = "12" />
                    <Run Text = "{Binding VisualRepresentation.Description, StringFormat=' {0}'}"
                         Foreground = "{StaticResource GreyedOutForeColorBrush}"
                         FontSize = "11" />
                </TextBlock.Inlines>
            </TextBlock>
        </Grid>
    </DataTemplate>


    <Style x:Key = "SearchResultListBoxStyle"
           TargetType = "ListBox">
        <Setter Property = "Background"
                Value = "Transparent" />
        <Setter Property = "BorderThickness"
                Value = "1" />
        <Setter Property = "BorderBrush"
                Value = "{StaticResource DefaultBorderColorBrush}" />
    </Style>

    <Style x:Key = "SearchResultItemStyle"
           TargetType = "ListBoxItem">
        <Setter Property = "HorizontalContentAlignment"
                Value = "Stretch" />
        <Setter Property = "Padding"
                Value = "4" />
        <Setter Property = "Margin"
                Value = "4, 0" />
        <Setter Property = "Background"
                Value = "{StaticResource DefaultBackColorBrush}" />

        <Setter Property = "Template">
            <Setter.Value>
                <ControlTemplate TargetType = "ListBoxItem">
                    <Border x:Name = "Bd"
                            Background = "{TemplateBinding Background}"
                            BorderBrush = "{TemplateBinding BorderBrush}"
                            BorderThickness = "{TemplateBinding BorderThickness}"
                            Padding = "{TemplateBinding Padding}"
                            SnapsToDevicePixels = "true"
                            CornerRadius = "5">
                        <ContentPresenter HorizontalAlignment = "{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment = "{TemplateBinding VerticalContentAlignment}"
                                          SnapsToDevicePixels = "{TemplateBinding SnapsToDevicePixels}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property = "IsMouseOver"
                                 Value = "true">
                            <Setter TargetName = "Bd"
                                    Property = "Background"
                                    Value = "{StaticResource DarkerSelectedBackColorBrush}" />
                        </Trigger>
                        <Trigger Property = "IsSelected"
                                 Value = "true">
                            <Setter TargetName = "Bd"
                                    Property = "Background"
                                    Value = "{StaticResource BlueSelectionBackColorBrush}" />
                            <Setter Property = "Foreground"
                                    Value = "{StaticResource DefaultForeColorBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>