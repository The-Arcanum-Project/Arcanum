<UserControl x:Class = "Arcanum.UI.NUI.Headers.DefaultHeader"
             xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable = "d"
             d:DesignHeight = "300"
             d:DesignWidth = "300">

    <!-- Use a StackPanel to arrange multiple TextBlocks -->
    <StackPanel Orientation="Horizontal" Background="CadetBlue">
        <!-- The First TextBlock for the Title -->
        <TextBlock x:Name="TitleTextBlock"
                   VerticalAlignment="Center"
                   FontSize="16"
                   FontWeight="Bold" />

        <!-- A spacer TextBlock -->
        <TextBlock Text="  " VerticalAlignment="Center"/>

        <!-- The Second TextBlock for the SubTitle -->
        <TextBlock x:Name="SubTitleTextBlock"
                   VerticalAlignment="Center"
                   FontSize="14"
                   FontWeight="Normal" />
    </StackPanel>
</UserControl>