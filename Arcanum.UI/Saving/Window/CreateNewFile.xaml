<styleClasses:BaseWindow x:Class="Arcanum.UI.Saving.Window.CreateNewFile"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:local="clr-namespace:Arcanum.UI.Saving.Window"
                         xmlns:styleClasses="clr-namespace:Arcanum.UI.Components.StyleClasses"
                         xmlns:saving="clr-namespace:Arcanum.UI.Saving"
                         mc:Ignorable="d"
                         Title="CreateNewFile"
                         SizeToContent="WidthAndHeight"
                         WindowStartupLocation="CenterOwner"
                         ResizeMode="NoResize">
    <styleClasses:BaseWindow.Resources>
        <ResourceDictionary Source="/Arcanum_UI;component/Assets/ArcanumShared/DefaultPalette.xaml" />
    </styleClasses:BaseWindow.Resources>
    <Grid Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border Margin="5"
                CornerRadius="5"
                Padding="5"
                BorderThickness="1"
                BorderBrush="{StaticResource DefaultBorderColorBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Text="Please enter the new filename:"
                           Margin="2"
                           FontSize="13"
                           HorizontalAlignment="Center" />
                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <TextBlock x:Name="FilePath"
                               VerticalAlignment="Center" />
                    <styleClasses:CorneredTextBox x:Name="FileNameInput"
                                                  MinWidth="80"
                                                  Height="22"
                                                  VerticalAlignment="Center"
                                                  Margin="5" KeyDown="FileNameInput_KeyDown">
                    </styleClasses:CorneredTextBox>

                    <TextBlock x:Name="FileExtension"
                               VerticalAlignment="Center" />
                </StackPanel>
            </Grid>
        </Border>
        <TextBlock Grid.Row="1"
                   x:Name="ErrorText"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,5">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Text"
                            Value="Input is valid!" />
                    <Setter Property="Foreground"
                            Value="{StaticResource DefaultForeColorBrush}" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=FileNameInput, Path=(Validation.HasError)}"
                                     Value="True">
                            <Setter Property="Text"
                                    Value="{Binding ElementName=FileNameInput, Path=(Validation.Errors)[0].ErrorContent}" />
                            <Setter Property="Foreground"
                                    Value="{StaticResource DimErrorRedColorBrush}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

    </Grid>
</styleClasses:BaseWindow>