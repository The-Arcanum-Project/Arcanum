<styleClasses:BaseWindow x:Class = "Arcanum.UI.WpfTesting.ExampleWindow"
                        xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:userControls = "clr-namespace:Arcanum.UI.Components.UserControls"
                        xmlns:styleClasses = "clr-namespace:Arcanum.UI.Components.StyleClasses"
                        xmlns:baseControls = "clr-namespace:Arcanum.UI.Components.UserControls.BaseControls"
                        mc:Ignorable = "d"
                        Height = "1020"
                        Width = "1020"
                        MinHeight="1020"
                        MinWidth="1020"
                        FooterHeight="0">

    <ScrollViewer x:Name="MainScrollViewer"
                  HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto"
                  PanningMode="Both"
                  Background="LightGray">
        <Canvas Name="drawingCanvas" Background="White" Margin="10" MaxHeight="888" MaxWidth="736"
                MouseWheel="Window_MouseWheel"
                MouseDown="Window_MouseDown"
                MouseUp="Window_MouseUp"
                MouseMove="Window_MouseMove">
            <Canvas.LayoutTransform>
                <ScaleTransform x:Name="CanvasScaleTransform" ScaleX="1" ScaleY="1"/>
            </Canvas.LayoutTransform>
        </Canvas>
    </ScrollViewer>

</styleClasses:BaseWindow>