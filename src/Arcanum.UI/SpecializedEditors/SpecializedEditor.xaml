<UserControl x:Class = "Arcanum.UI.SpecializedEditors.SpecializedEditor"
             xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
             xmlns:styleClasses = "clr-namespace:Arcanum.UI.Components.StyleClasses"
             mc:Ignorable = "d"
             d:DesignHeight = "600"
             d:DesignWidth = "400">
    <Grid Margin = "3">
        <Grid.RowDefinitions>
            <RowDefinition Height = "Auto" />
            <RowDefinition Height = "Auto" />
            <RowDefinition Height = "*" />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row = "0"
                   Margin = "2"
                   LastChildFill = "False">
            <TextBlock DockPanel.Dock = "Left"
                       Text = "Target Property:" />
            <ComboBox DockPanel.Dock = "Right"
                      MinWidth = "200"
                      x:Name = "PropertySelector"
                      ItemsSource = "{Binding TargetableProperties, RelativeSource={RelativeSource AncestorType= UserControl}}"
                      SelectionChanged = "Selector_OnSelectionChanged" />
        </DockPanel>

        <DockPanel Grid.Row = "1"
                   Margin = "2"
                   LastChildFill = "False">
            <TextBlock DockPanel.Dock = "Left"
                       Text = "Fulfills Requirements:" />

            <styleClasses:BaseButton DockPanel.Dock = "Right"
                                     Content = "Verify"
                                     Width = "50"
                                     Command = "{Binding CheckRequirementsCommand, RelativeSource={RelativeSource AncestorType= UserControl}}" />

            <TextBlock DockPanel.Dock = "Right"
                       Text = "{Binding RequirementsStatusText, RelativeSource={RelativeSource AncestorType= UserControl}}"
                       Margin = "0, 1, 5, 0"
                       HorizontalAlignment = "Center" />
        </DockPanel>

        <ContentControl Grid.Row = "2"
                        Margin = "2"
                        Content = "{Binding EditorContent, RelativeSource={RelativeSource AncestorType= UserControl}}" />
    </Grid>
</UserControl>