<styleClasses:BaseWindow x:Class = "Arcanum.UI.Components.Windows.DebugWindows.AgsWindow"
                         xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
                         xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:styleClasses = "clr-namespace:Arcanum.UI.Components.StyleClasses"
                         mc:Ignorable = "d"
                         Title = "AgsWindow"
                         Height = "700"
                         Width = "1500"
                         WindowStartupLocation = "CenterScreen">
    <Grid Margin = "2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "4*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height = "*" />
            <RowDefinition Height = "30" />
        </Grid.RowDefinitions>

        <ListView Grid.Column = "0"
                  Grid.Row = "0"
                  x:Name = "AgsTypesView"
                  ItemsSource = "{Binding AgsTypes, RelativeSource={RelativeSource AncestorType=Window}}"
                  SelectionChanged = "AgsItemsView_SelectionChanged"
                  Margin = "2">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text = "{Binding Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ListView Grid.Column = "1"
                  Grid.Row = "0"
                  x:Name = "AgsItemsView"
                  ItemsSource = "{Binding AgsItems, RelativeSource={RelativeSource AncestorType=Window}}"
                  SelectionChanged = "ObjectSelector_OnSelectionChanged"
                  Margin = "2">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text = "{Binding UniqueId}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


        <ListView Grid.Column = "2"
                  Grid.Row = "0"
                  x:Name = "Eu5FileObj"
                  ItemsSource = "{Binding FileObjs, RelativeSource={RelativeSource AncestorType=Window}}"
                  SelectionChanged = "Eu5FileObjSelector_OnSelectionChanged"
                  MouseDoubleClick = "Eu5FileObjSelector_OnMouseDown"
                  Margin = "2">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text = "{Binding Path.Filename}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


        <styleClasses:CorneredTextBox Grid.Column = "3"
                                      Grid.Row = "0"
                                      x:Name = "AgsSavingText"
                                      TextWrapping = "NoWrap"
                                      VerticalScrollBarVisibility = "Auto"
                                      HorizontalScrollBarVisibility = "Auto"
                                      IsReadOnly = "True"
                                      FontFamily = "Consolas"
                                      FontSize = "12"
                                      Margin = "2"
                                      Text = "{Binding FormattedText, RelativeSource ={RelativeSource AncestorType=styleClasses:BaseWindow}}" />

        <TextBlock Grid.Column = "0"
                   Grid.Row = "1"
                   HorizontalAlignment = "Left"
                   VerticalAlignment = "Center"
                   Text = "{Binding Complexity, RelativeSource={RelativeSource AncestorType=Window}}">
        </TextBlock>

        <TextBlock Grid.Column = "1"
                   Grid.Row = "1"
                   HorizontalAlignment = "Left"
                   VerticalAlignment = "Center"
                   Text = "{Binding SavingTime, RelativeSource={RelativeSource AncestorType=Window}, StringFormat='Saving time: {0} ms'}">
        </TextBlock>

        <StackPanel Orientation = "Horizontal"
                    Grid.Column = "3"
                    Grid.Row = "1"
                    HorizontalAlignment = "Right">

            <CheckBox x:Name = "AllowMultithreadedCheckBox"
                      VerticalAlignment = "Center"
                      Margin = "4, 0"
                      IsChecked = "True">
                Allow Multithreaded use
            </CheckBox>

            <styleClasses:BaseButton Width = "100"
                                     Click = "CopyButton_Click"
                                     Margin = "2">
                Copy
            </styleClasses:BaseButton>
            <styleClasses:BaseButton Width = "100"
                                     Click = "ExportButton_Click"
                                     Margin = "2">
                Export
            </styleClasses:BaseButton>
        </StackPanel>
    </Grid>
</styleClasses:BaseWindow>