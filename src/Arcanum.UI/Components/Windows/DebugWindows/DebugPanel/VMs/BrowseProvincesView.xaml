<UserControl x:Class = "Arcanum.UI.Components.Windows.DebugWindows.DebugPanel.VMs.BrowseProvincesView"
             xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
             xmlns:styleClasses = "clr-namespace:Arcanum.UI.Components.StyleClasses"
             xmlns:baseControls = "clr-namespace:Arcanum.UI.Components.UserControls.BaseControls"
             mc:Ignorable = "d"
             d:DesignHeight = "300"
             d:DesignWidth = "300">
    <Grid Margin = "2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "2*" />
            <ColumnDefinition Width = "3*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height = "30" />
            <RowDefinition Height = "*" />
        </Grid.RowDefinitions>

        <styleClasses:CorneredTextBox x:Name = "FilterProvincesTextBox"
                                      Grid.Column = "0"
                                      Grid.Row = "0"
                                      Margin = "0"
                                      TextChanged = "FilterProvincesTextBox_TextChanged" />

        <ListView x:Name = "ProvincesListBox"
                  Grid.Column = "0"
                  Grid.Row = "1"
                  Margin = "0"
                  SelectionChanged = "ProvincesListBox_SelectionChanged"
                  ItemsSource = "{Binding ItemsView, RelativeSource={RelativeSource AncestorType=UserControl}}" />

        <baseControls:PropertyGrid x:Name = "ProvincePropertyGrid"
                                   Grid.Column = "1"
                                   Grid.Row = "0"
                                   Grid.RowSpan = "2"
                                   Margin = "0" />
    </Grid>
</UserControl>