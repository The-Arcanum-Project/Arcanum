<styleClasses:BaseWindow x:Class = "Arcanum.UI.Components.Windows.DebugWindows.Renamer"
                         xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
                         xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:styleClasses = "clr-namespace:Arcanum.UI.Components.StyleClasses"
                         xmlns:metadata = "clr-namespace:System.Reflection.Metadata;assembly=System.Reflection.Metadata"
                         mc:Ignorable = "d" Title = "Renamer" Height = "450" Width = "800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "1*" MinWidth = "150" />
            <ColumnDefinition Width = "1*" MinWidth = "150" />
            <ColumnDefinition Width = "4*" />
        </Grid.ColumnDefinitions>

        <ListView Grid.Column = "0" Margin = "4"
                  ItemsSource = "{Binding NUIObjectTypes, RelativeSource={RelativeSource AncestorType=styleClasses:BaseWindow}}"
                  SelectionChanged = "Selector_OnSelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate DataType = "{x:Type metadata:TypeName}">
                    <TextBlock Text = "{Binding Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</styleClasses:BaseWindow>