<styleClasses:BaseWindow x:Class = "Arcanum.UI.Components.Windows.MinorWindows.CrashHandler.CrashHandler"
                         xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
                         xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:styleClasses = "clr-namespace:Arcanum.UI.Components.StyleClasses"
                         mc:Ignorable = "d"
                         Title = "Arcanum Crash Handler"
                         Height = "450"
                         Width = "800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height = "Auto" />
            <RowDefinition Height = "80" />
            <RowDefinition Height = "*" />
            <RowDefinition Height = "Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text = "Arcanum has encountered an unexpected error."
                   FontSize = "20"
                   FontWeight = "Bold"
                   Margin = "10"
                   Grid.Row = "0"
                   HorizontalAlignment = "Center" />

        <TextBlock Text = "Please help us improve Arcanum by sending the crash report below to our development team."
                   FontSize = "14"
                   Margin = "10"
                   Grid.Row = "1"
                   HorizontalAlignment = "Center" />

        <styleClasses:CorneredTextBox x:Name = "CrashReportTextBox"
                                      Grid.Row = "2"
                                      Margin = "10"
                                      TextWrapping = "Wrap"
                                      VerticalScrollBarVisibility = "Auto"
                                      IsReadOnly = "True" />

        <StackPanel Orientation = "Horizontal"
                    HorizontalAlignment = "Right"
                    Margin = "10"
                    Grid.Row = "3">
            <styleClasses:BaseButton Content = "Save crash log"
                                     Width = "120"
                                     Margin = "5"
                                     Click = "SaveCrashLog" />

            <styleClasses:BaseButton Content = "Close"
                                     Width = "80"
                                     Margin = "5"
                                     Click = "CloseButton_Click" />
        </StackPanel>
    </Grid>
</styleClasses:BaseWindow>