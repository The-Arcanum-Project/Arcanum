<styleClasses:BaseWindow x:Class = "Arcanum.UI.Components.Windows.MinorWindows.DocsObjBrowser"
                         xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
                         xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:styleClasses = "clr-namespace:Arcanum.UI.Components.StyleClasses"
                         mc:Ignorable = "d"
                         Title = "DocsObjBrowser"
                         Height = "450"
                         Width = "1200"
                         Background = "{StaticResource DefaultBackColorBrush}">

    <styleClasses:BaseWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source = "/Arcanum_UI;component/Assets/ArcanumShared/DefaultPalette.xaml" />
                <ResourceDictionary Source = "/Arcanum_UI;component/Assets/ArcanumShared/DefaultFonts.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </styleClasses:BaseWindow.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height = "27" />
            <RowDefinition Height = "6" />
            <RowDefinition Height = "*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row = "0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width = "*" />
                <ColumnDefinition Width = "250" /> <!-- PropertyFilter -->
            </Grid.ColumnDefinitions>

            <styleClasses:CorneredTextBox Grid.Row = "0"
                                          Grid.Column = "0"
                                          x:Name = "SearchTextBox"
                                          Margin = "2"
                                          TextChanged = "SearchTextBox_OnTextChanged">
            </styleClasses:CorneredTextBox>

            <ComboBox Grid.Column = "1"
                      x:Name = "PropertyFilterComboBox"
                      Background = "{StaticResource DefaultBackColorBrush}"
                      Margin = "2"
                      SelectionChanged = "PropertyFilterComboBox_OnSelectionChanged">

            </ComboBox>
        </Grid>

        <Border Grid.Row = "1"
                BorderThickness = "2"
                CornerRadius = "3"
                Margin = "3, 0"
                Background = "{StaticResource DefaultBorderColorBrush}">
        </Border>

        <DataGrid Grid.Row = "2"
                  x:Name = "DocsObjDataGrid"
                  ItemsSource = "{Binding }"
                  AutoGenerateColumns = "False"
                  SelectionMode = "Single"
                  SelectionChanged = "DataGrid_SelectionChanged"
                  Background = "{StaticResource InlineBackColorBrush}"
                  RowHeaderWidth = "0"
                  IsReadOnly = "True">


            <DataGrid.Columns>
                <DataGridTextColumn Header = "Name"
                                    Binding = "{Binding Name}" />
                <DataGridTextColumn Header = "Usage"
                                    Binding = "{Binding Usage}" />
                <DataGridTextColumn Header = "ReadsGameState"
                                    Binding = "{Binding ReadsGameStateForAllScopes}" />
                <DataGridTextColumn Header = "Traits"
                                    Binding = "{Binding TraitsString}" />
                <DataGridTextColumn Header = "Scopes"
                                    Binding = "{Binding ScopesString}" />
                <DataGridTextColumn Header = "Targets"
                                    Binding = "{Binding TargetsString}" />
                <DataGridTextColumn Header = "Description"
                                    Binding = "{Binding Description}" />
            </DataGrid.Columns>
        </DataGrid>


    </Grid>
</styleClasses:BaseWindow>