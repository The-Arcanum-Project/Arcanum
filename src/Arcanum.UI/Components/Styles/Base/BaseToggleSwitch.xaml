<ResourceDictionary xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters = "clr-namespace:Arcanum.UI.Components.Converters">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source = "/Arcanum_UI;component/Assets/ArcanumShared/DefaultPalette.xaml" />
        <ResourceDictionary Source = "/Arcanum_UI;component/Assets/ArcanumShared/DefaultFonts.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- Converter to calculate radius from height -->
    <converters:HalfRadiusConverter x:Key = "HalfRadiusConverter" />

    <Style x:Key = "ToggleSwitch"
           TargetType = "{x:Type ToggleButton}">
        <Setter Property = "Width"
                Value = "50" />
        <Setter Property = "Height"
                Value = "25" />
        <Setter Property = "Template">
            <Setter.Value>
                <ControlTemplate TargetType = "{x:Type ToggleButton}">
                    <Grid x:Name = "templateRoot"
                          Background = "Transparent"
                          Margin = "0">
                        <Border x:Name = "Track"
                                BorderBrush = "{StaticResource DefaultBorderColorBrush}"
                                BorderThickness = "1"
                                CornerRadius = "{Binding ActualHeight, RelativeSource={RelativeSource Self}, Converter={StaticResource HalfRadiusConverter}}">
                            <Border.Background>
                                <SolidColorBrush x:Name = "TrackBackground"
                                                 Color = "{StaticResource LightBackColor}" />
                            </Border.Background>
                        </Border>

                        <Ellipse x:Name = "Thumb"
                                 HorizontalAlignment = "Left"
                                 Margin = "1"
                                 VerticalAlignment = "Stretch"
                                 Width = "{Binding ActualHeight, RelativeSource={RelativeSource Self}}">
                            <Ellipse.Fill>
                                <SolidColorBrush x:Name = "ThumbFill"
                                                 Color = "{StaticResource DefaultForeColor}" />
                            </Ellipse.Fill>
                        </Ellipse>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <!-- On/Checked State -->
                        <Trigger Property = "IsChecked"
                                 Value = "True">
                            <Setter TargetName = "Track"
                                    Property = "Background"
                                    Value = "{StaticResource LightAccentBackColorBrush}" />
                            <Setter TargetName = "Thumb"
                                    Property = "HorizontalAlignment"
                                    Value = "Right" />
                        </Trigger>

                        <!-- Hover State -->
                        <Trigger Property = "IsMouseOver"
                                 Value = "True">
                            <Setter TargetName = "Track"
                                    Property = "BorderBrush"
                                    Value = "{StaticResource SelectedControlBorderColorBrush}" />
                        </Trigger>
                        <Trigger Property = "IsKeyboardFocused"
                                 Value = "True">
                            <Setter TargetName = "Track"
                                    Property = "BorderBrush"
                                    Value = "{StaticResource SelectedControlBorderColorBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>