<UserControl x:Class = "Arcanum.UI.Components.Views.MainMenuScreen.AboutUsViewModel"
             xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
             xmlns:styleClasses = "clr-namespace:Arcanum.UI.Components.StyleClasses"
             mc:Ignorable = "d"
             Background = "Transparent"
             d:DesignHeight = "450"
             d:DesignWidth = "800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source = "/Arcanum_UI;component/Components/Styles/Specific/TransparentButtonStyle.xaml" />
                <ResourceDictionary Source = "/Arcanum_UI;component/Assets/ArcanumShared/DefaultPalette.xaml" />
                <ResourceDictionary Source = "/Arcanum_UI;component/Components/Styles/Base/BaseButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height = "40" />
            <RowDefinition Height = "Auto" />
            <RowDefinition Height = "80" />
            <RowDefinition Height = "Auto" />
            <RowDefinition Height = "30" />
            <RowDefinition Height = "40" />
            <RowDefinition Height = "*" />
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style TargetType = "Rectangle">
                <Setter Property = "Fill"
                        Value = "{StaticResource DefaultBorderColorBrush}" />
                <Setter Property = "Height"
                        Value = "4" />
                <Setter Property = "Margin"
                        Value = "10, 18" />
                <Setter Property = "RadiusX"
                        Value = "4" />
                <Setter Property = "RadiusY"
                        Value = "4" />
            </Style>
        </Grid.Resources>

        <TextBlock Text = "About Us"
                   FontSize = "24"
                   FontWeight = "Bold"
                   HorizontalAlignment = "Left"
                   VerticalAlignment = "Center"
                   Margin = "10,0,0,0" />

        <Rectangle Grid.Row = "1" />

        <TextBlock Grid.Row = "2"
                   Margin = "10,3,10,3"
                   FontSize = "14"
                   Text = "We create this tool in our spare time, as a project useful, to the Europa Universalis 5 modding community. &#x0a;If you want to support us feel free to check out our Patreon! &#x0a;I hope we made your modding easier and created a pleasant user experience for you.&#x0a;If you experience any bugs, think a feature is missing or an improvement could be made,&#x0a; let us know using a GitHub issue!" />

        <Rectangle Grid.Row = "3" />

        <TextBlock Grid.Row = "4"
                   Margin = "10,3,10,3"
                   FontSize = "18"
                   Text = "Made by:" />

        <Grid Grid.Row = "5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width = "1*" />
                <ColumnDefinition Width = "1*" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column = "0"
                       HorizontalAlignment = "Center"
                       VerticalAlignment = "Center"
                       FontSize = "30"
                       Foreground = "{StaticResource GreenColorBrush}"
                       Text = "MINNATOR">
            </TextBlock>
            <TextBlock Grid.Column = "1"
                       HorizontalAlignment = "Center"
                       VerticalAlignment = "Center"
                       FontSize = "30"
                       Foreground = "{StaticResource GreenColorBrush}"
                       Text = "MEL-CO">
            </TextBlock>
        </Grid>

        <Grid Grid.Row = "6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width = "1*" />
                <ColumnDefinition Width = "1*" />
                <ColumnDefinition Width = "1*" />
            </Grid.ColumnDefinitions>

            <Button x:Name = "OpenPatreonButton"
                    Grid.Column = "0"
                    Margin = "50, 25"
                    Padding = "10, 5"
                    FontSize = "16"
                    Click = "OpenPatreonButton_Click">

                <Image Source = "/Arcanum_UI;component/Assets/Images/PATREON_SYMBOL_1_WHITE_RGB.png"
                       Stretch = "Uniform"
                       RenderOptions.BitmapScalingMode = "HighQuality" />

            </Button>
            <styleClasses:BaseButton x:Name = "OpenDiscordButton"
                                     Grid.Column = "1"
                                     Margin = "50, 25"
                                     Padding = "10, 5"
                                     FontSize = "16"
                                     Click = "OpenGithubButton_OnClick"
                                     Background = "Transparent"
                                     HoverBackground = "Transparent">
                <styleClasses:BaseButton.Style>
                    <Style TargetType = "styleClasses:BaseButton"
                           BasedOn = "{StaticResource {x:Type styleClasses:BaseButton}}">
                        <Setter Property = "Background"
                                Value = "Transparent" />
                        <Setter Property = "HoverBackground"
                                Value = "Transparent" />
                        <Setter Property = "BorderThickness"
                                Value = "0">
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property = "IsMouseOver"
                                     Value = "True">
                                <Setter Property = "Cursor"
                                        Value = "Hand" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </styleClasses:BaseButton.Style>
                <Image Source = "/Arcanum_UI;component/Assets/Images/github_mark_white.png"
                       Stretch = "Uniform"
                       RenderOptions.BitmapScalingMode = "HighQuality" />
            </styleClasses:BaseButton>
            <styleClasses:BaseButton x:Name = "OpenGithubButton"
                                     Grid.Column = "2"
                                     Margin = "50, 25"
                                     Padding = "10, 5"
                                     FontSize = "16"
                                     Click = "OpenDiscordButton_OnClick"
                                     Background = "Transparent"
                                     HoverBackground = "Transparent">
                <styleClasses:BaseButton.Style>
                    <Style TargetType = "styleClasses:BaseButton"
                           BasedOn = "{StaticResource {x:Type styleClasses:BaseButton}}">
                        <Setter Property = "HoverBackground"
                                Value = "Transparent" />
                        <Setter Property = "Background"
                                Value = "Transparent" />
                        <Setter Property = "BorderThickness"
                                Value = "0">
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property = "IsMouseOver"
                                     Value = "True">
                                <Setter Property = "Cursor"
                                        Value = "Hand" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </styleClasses:BaseButton.Style>
                <Image Source = "/Arcanum_UI;component/Assets/Images/Discord-Symbol-White.png"
                       Stretch = "Uniform"
                       RenderOptions.BitmapScalingMode = "HighQuality" />
            </styleClasses:BaseButton>
        </Grid>
    </Grid>
</UserControl>