<UserControl x:Class = "Arcanum.UI.Components.Views.MainMenuScreen.ModforgeViewModel"
             xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable = "d"
             Background = "Transparent"
             d:DesignHeight = "450"
             d:DesignWidth = "700">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source = "/Arcanum_UI;component/Components/Styles/Specific/PresentationCard.xaml" />
                <ResourceDictionary>

                    <Style x:Key = "SocialCardBorderStyle"
                           TargetType = "Border"
                           BasedOn = "{StaticResource PresentationCard}">
                        <Setter Property = "Width"
                                Value = "300" />
                        <Setter Property = "Height"
                                Value = "150" />
                        <Setter Property = "Background"
                                Value = "BlueViolet" />
                        <Setter Property = "Margin"
                                Value = "0" />
                    </Style>

                    <!-- TextBlock Styles -->
                    <Style x:Key = "TitleText"
                           TargetType = "TextBlock">
                        <Setter Property = "Foreground"
                                Value = "White" />
                        <Setter Property = "FontSize"
                                Value = "28" />
                        <Setter Property = "HorizontalAlignment"
                                Value = "Left" />
                    </Style>

                    <Style x:Key = "SectionHeaderText"
                           TargetType = "TextBlock">
                        <Setter Property = "Foreground"
                                Value = "White" />
                        <Setter Property = "FontSize"
                                Value = "20" />
                        <Setter Property = "Margin"
                                Value = "0,0,0,10" />
                        <Setter Property = "HorizontalAlignment"
                                Value = "Left" />
                    </Style>

                    <Style TargetType = "TextBlock">
                        <Setter Property = "FontSize"
                                Value = "20" />
                        <Setter Property = "TextAlignment"
                                Value = "Center" />
                        <Setter Property = "Foreground"
                                Value = "White" />
                        <Setter Property = "VerticalAlignment"
                                Value = "Center" />
                        <Setter Property = "Width"
                                Value = "75" />
                        <Setter Property = "Margin"
                                Value = "2,12,5,0" />
                    </Style>

                    <!-- Image Style -->
                    <Style TargetType = "Image">
                        <Setter Property = "Width"
                                Value = "60" />
                        <Setter Property = "Height"
                                Value = "60" />
                        <Setter Property = "Margin"
                                Value = "5,10,0,0" />
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height = "100" />
            <RowDefinition Height = "Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="330"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Image Stretch = "Uniform" Margin="15,5,0,0"
                   RenderOptions.BitmapScalingMode = "HighQuality" Width="Auto" Height="Auto" Source = "/Arcanum_UI;component/Assets/Images/ModforgeBanner.png" />
            <TextBlock Grid.Column="1" 
                       Text = "Interested in Modding EU4 instead? Check out Minnators Modforge!"
                       Style = "{StaticResource TitleText}"
                       Margin = "10"
                       TextWrapping = "Wrap"
                       HorizontalAlignment="Center"
                       VerticalAlignment = "Center"
                       FontSize = "20"
                       Width = "Auto" />
        </Grid>

        <Rectangle Grid.Row = "1"
                   Fill = "{StaticResource DefaultBorderColorBrush}"
                   Height = "4"
                   Margin = "10,15,10,0"
                   RadiusX = "4"
                   RadiusY = "4">
        </Rectangle>

        <Grid Grid.Row = "2"
              Margin = "0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width = "1*" />
                <ColumnDefinition Width = "1*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Row = "0">
                <Grid.RowDefinitions>
                    <RowDefinition Height = "50" />
                    <RowDefinition Height = "1*" />
                </Grid.RowDefinitions>
                <TextBlock Text = "Discover"
                           Style = "{StaticResource TitleText}"
                           Margin = "0,0,0,0"
                           HorizontalAlignment = "Center"
                           FontSize = "30" />


                <!-- Latest Release Card -->
                <Border Grid.Row = "1"
                        Width = "Auto"
                        Height = "Auto"
                        Style = "{StaticResource PresentationCard}"
                        Margin = "10">
                    <Border.Background>
                        <LinearGradientBrush StartPoint = "0,0"
                                             EndPoint = "1,2">
                            <GradientStop Color = "SandyBrown"
                                          Offset = "0.0" />
                            <GradientStop Color = "Purple"
                                          Offset = "1.0" />
                        </LinearGradientBrush>
                    </Border.Background>

                    <StackPanel>
                        <TextBlock Text = "Latest Release"
                                   Style = "{StaticResource TitleText}"
                                   HorizontalAlignment = "Center"
                                   Margin = "10,20,10,10"
                                   FontSize = "38" />
                        <TextBlock x:Name = "LatestReleaseNameTextBox"
                                   Text = "Fetching data..."
                                   Foreground = "{StaticResource AccentBackColorBrush}"
                                   TextAlignment = "Center"
                                   FontSize = "25"
                                   Margin = "20,5,20,0"
                                   Width = "250" />
                        <TextBlock x:Name = "LatestReleaseVersionTextBox"
                                   Text = "Version 1.1.0.0-beta"
                                   Foreground = "LightGray"
                                   TextAlignment = "Center"
                                   FontSize = "16"
                                   Margin = "20,0,20,20"
                                   Width = "250" />
                        <TextBlock x:Name = "LatestReleaseUpdateTextBox"
                                   Text = "Get it now!"
                                   Foreground = "White"
                                   TextWrapping = "WrapWithOverflow"
                                   FontSize = "26"
                                   HorizontalAlignment = "Center"
                                   Margin = "20,15,20,20"
                                   Width = "250" />
                    </StackPanel>
                </Border>
            </Grid>

            <Grid Grid.Column = "1">
                <Grid.RowDefinitions>
                    <RowDefinition Height = "50" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row = "0"
                           Text = "Socials"
                           Style = "{StaticResource SectionHeaderText}"
                           HorizontalAlignment = "Center"
                           VerticalAlignment = "Center"
                           FontSize = "30" />

                <Grid Grid.Row = "1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height = "1*" />
                        <RowDefinition Height = "1*" />
                    </Grid.RowDefinitions>
                    <!-- Discord -->
                    <Border Style = "{StaticResource SocialCardBorderStyle}"
                            Height = "Auto"
                            Width = "Auto"
                            Margin = "10,10,150,10"
                            MouseUp = "OpenGithub">
                        <Image Source = "/Arcanum_UI;component/Assets/Images/github_mark_white.png"
                               Stretch = "Uniform"
                               RenderOptions.BitmapScalingMode = "HighQuality"
                               Margin = "5" />
                    </Border>
                    <Border Grid.Row = "1"
                            Style = "{StaticResource SocialCardBorderStyle}"
                            Height = "Auto"
                            Width = "Auto"
                            Margin = "150,10,10,10"
                            MouseUp = "OpenDiscord">
                        <Image Source = "/Arcanum_UI;component/Assets/Images/Discord-Symbol-White.png"
                               Stretch = "Uniform"
                               RenderOptions.BitmapScalingMode = "HighQuality"
                               Margin = "15" />
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>

</UserControl>