<UserControl x:Class = "Arcanum.UI.Components.Views.MainMenuScreen.HomeViewModel"
             xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable = "d"
             Background = "Transparent"
             d:DesignHeight = "450"
             d:DesignWidth = "800">


    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source = "/Arcanum_UI;component/Components/Styles/Specific/PresentationCard.xaml" />
                <ResourceDictionary>

                    <Style x:Key = "SocialCardBorderStyle"
                           TargetType = "Border"
                           BasedOn = "{StaticResource PresentationCard}">
                        <Setter Property = "Width"
                                Value = "150" />
                        <Setter Property = "Height"
                                Value = "150" />
                        <Setter Property = "Background"
                                Value = "BlueViolet" />
                    </Style>

                    <!-- TextBlock Styles -->
                    <Style x:Key = "TitleText"
                           TargetType = "TextBlock">
                        <Setter Property = "Foreground"
                                Value = "White" />
                        <Setter Property = "FontSize"
                                Value = "28" />
                        <Setter Property = "HorizontalAlignment"
                                Value = "Left" />
                    </Style>

                    <Style x:Key = "SectionHeaderText"
                           TargetType = "TextBlock">
                        <Setter Property = "Foreground"
                                Value = "White" />
                        <Setter Property = "FontSize"
                                Value = "20" />
                        <Setter Property = "Margin"
                                Value = "0,0,0,10" />
                        <Setter Property = "HorizontalAlignment"
                                Value = "Left" />
                    </Style>

                    <!-- Image Style -->
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel>
        <TextBlock Text = "Discover"
                   Style = "{StaticResource TitleText}"
                   Margin = "0,0,0,10" />

        <StackPanel Orientation = "Horizontal">
            <!-- News Card -->
            <Border Width = "400"
                    Height = "200"
                    Style = "{StaticResource PresentationCard}">
                <Border.Background>
                    <LinearGradientBrush StartPoint = "0,0"
                                         EndPoint = "1,2">
                        <GradientStop Color = "CornflowerBlue"
                                      Offset = "0.0" />
                        <GradientStop Color = "BlueViolet"
                                      Offset = "1.0" />
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <StackPanel>
                        <TextBlock Text = "Arcanum News"
                                   Style = "{StaticResource TitleText}"
                                   Margin = "20,20,20,0" />
                        <ScrollViewer HorizontalScrollBarVisibility = "Disabled"
                                      VerticalScrollBarVisibility = "Auto"
                                      Height = "120"
                                      Margin = "20, 10, 120, 20">
                            <TextBlock x:Name = "LatestNewsText"
                                       Text = "Arcanum has been released for the first time. In the future this card will link to current posts regarding the development as well as highlighting some mods created with Arcanum."
                                       Width = "215"
                                       HorizontalAlignment = "Left"
                                       Foreground = "White"
                                       TextWrapping = "WrapWithOverflow"
                                       FontSize = "12" />
                        </ScrollViewer>
                    </StackPanel>
                    <Image Width = "120"
                           Height = "120"
                           Source = "/Arcanum_UI;component/Assets/Logo/ArcanumForeColor.png"
                           RenderOptions.BitmapScalingMode = "HighQuality"
                           Margin = "251,37,23,37" />
                </Grid>
            </Border>

            <!-- Latest Release Card -->
            <Border Width = "200"
                    Height = "200"
                    Margin = "50,0,0,0"
                    Style = "{StaticResource PresentationCard}"
                    MouseUp = "OpenRelease">
                <Border.Background>
                    <LinearGradientBrush StartPoint = "0,-0.5"
                                         EndPoint = "1,1">
                        <GradientStop x:Name = "ColorA" Color = "MediumPurple"
                                      Offset = "0.0" />
                        <GradientStop x:Name = "ColorB" Color = "LightCoral"
                                      Offset = "1.0" />
                    </LinearGradientBrush>
                </Border.Background>

                <StackPanel>
                    <TextBlock
                        Text = "Latest Release "
                        TextAlignment="Center"
                        VerticalAlignment="Center"
                        TextWrapping="Wrap"
                                   
                        FontSize="24"
                        Foreground="WhiteSmoke"
                        Style = "{StaticResource TitleText}"
                        HorizontalAlignment = "Center"
                        Margin = "10,20,10,0" />
                    <TextBlock x:Name="LatestReleaseName"
                               Text = "-"
                               Foreground = "WhiteSmoke"
                               TextAlignment = "Center"
                               FontWeight="DemiBold"
                               FontSize = "21"
                               Margin = "20,20,20,0" />
                    <TextBlock x:Name="LatestReleaseVersion"
                               Text = "-"
                               Foreground = "{StaticResource LightForeColorBrush}"
                               TextAlignment = "Center"
                               FontSize = "12"
                               Margin = "20,5,20,20" />
                    <TextBlock x:Name="LatestReleaseStatus"
                               Text = "Fetching data..."
                               Foreground = "{StaticResource LightForeColorBrush}"
                               TextWrapping = "WrapWithOverflow"
                               FontSize = "26"
                               HorizontalAlignment = "Center"
                               Margin = "10,0,10,20" />
                </StackPanel>
            </Border>
        </StackPanel>

        <StackPanel Orientation = "Horizontal"
                    Margin = "0,10,0,0">
            <!-- Feature Spotlight -->
            <StackPanel>
                <TextBlock Text = "Feature Spotlight"
                           Style = "{StaticResource SectionHeaderText}"
                           FontSize = "24" />
                <Border Width = "315"
                        Height = "150"
                        Background = "BlueViolet"
                        Style = "{StaticResource PresentationCard}"
                        Margin = "0"
                        MouseUp = "OpenDocumentation">

                    <Grid Margin = "10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width = "Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text = "Read about our features in the&#x0a;user guide!"
                                   HorizontalAlignment = "Center"
                                   VerticalAlignment = "Center"
                                   Foreground = "White"
                                   LineHeight = "32"
                                   TextWrapping = "WrapWithOverflow"
                                   FontSize = "20"
                                   Margin = "00,0,0,0" />
                        <Image Grid.Column = "1"
                               Stretch = "None"
                               Source = "/Arcanum_UI;component/Assets/Icons/Huge/Book110x110.png" />
                    </Grid>
                </Border>
            </StackPanel>

            <!-- Socials -->
            <StackPanel Margin = "20,0,0,0">
                <TextBlock Text = "Socials"
                           Style = "{StaticResource SectionHeaderText}"
                           FontSize = "24" />
                <StackPanel Orientation = "Horizontal">
                    <!-- Discord -->
                    <Border Style = "{StaticResource SocialCardBorderStyle}"
                            MouseUp = "OpenDiscord">
                        <Image Source = "/Arcanum_UI;component/Assets/Images/Discord-Symbol-White.png"
                               Stretch = "Uniform"
                               RenderOptions.BitmapScalingMode = "HighQuality"
                               Margin = "15" />
                    </Border>

                    <!-- GitHub -->
                    <Border Style = "{StaticResource SocialCardBorderStyle}"
                            Margin = "15,0,0,0"
                            MouseUp = "OpenGithub">
                        <Image Source = "/Arcanum_UI;component/Assets/Images/github_mark_white.png"
                               Stretch = "Uniform"
                               RenderOptions.BitmapScalingMode = "HighQuality"
                               Margin = "15" />
                    </Border>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>