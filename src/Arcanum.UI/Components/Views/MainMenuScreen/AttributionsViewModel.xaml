<UserControl x:Class = "Arcanum.UI.Components.Views.MainMenuScreen.AttributionsViewModel"
             xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable = "d"
             Background = "Transparent"
             d:DesignHeight = "450"
             d:DesignWidth = "800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source = "/Arcanum_UI;component/Assets/ArcanumShared/DefaultPalette.xaml" />
                <ResourceDictionary Source = "/Arcanum_UI;component/Assets/ArcanumShared/DefaultFonts.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height = "40" />
            <RowDefinition Height = "Auto" />
            <RowDefinition Height = "*" />
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style TargetType = "Rectangle">
                <Setter Property = "Fill"
                        Value = "{StaticResource DefaultBorderColorBrush}" />
                <Setter Property = "Height"
                        Value = "4" />
                <Setter Property = "Margin"
                        Value = "10, 18" />
                <Setter Property = "RadiusX"
                        Value = "4" />
                <Setter Property = "RadiusY"
                        Value = "4" />
            </Style>
        </Grid.Resources>
        <TextBlock Grid.Row = "0"
                   Text = "Attributions"
                   FontSize = "24"
                   FontWeight = "Bold"
                   Margin = "10,0,0,0"
                   VerticalAlignment = "Center"
                   HorizontalAlignment = "Left" />

        <Rectangle Grid.Row = "1" />

        <TextBlock Grid.Row = "2"
                   Margin = "10,3"
                   IsEnabled = "True"
                   Focusable = "True"
                   TextWrapping = "Wrap"
                   FontSize = "14">

            <Run Text = "Solar-Icon-Set:"
                 FontWeight = "Bold"
                 FontSize = "16"
                 TextDecorations = "Underline" />
            <LineBreak />

            <Run Text = "• " />
            <Hyperlink NavigateUri = "https://creativecommons.org/licenses/by/4.0"
                       RequestNavigate = "Hyperlink_OnRequestNavigate">
                Creative Commons License
            </Hyperlink>
            <LineBreak />
            <Run Text = "• " />
            <Hyperlink NavigateUri = "https://github.com/480-Design/Solar-Icon-Set/tree/main"
                       RequestNavigate = "Hyperlink_OnRequestNavigate">
                Solar-Icon-Set GitHub Repository
            </Hyperlink>
            <LineBreak />
            <Run Text = "•  Icons were adapted and expanded upon" />

        </TextBlock>

    </Grid>
</UserControl>